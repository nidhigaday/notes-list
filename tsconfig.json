{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "dom",
      "es5",
      "es2015",
      "es2016.array.include",
      "es2017"
    ],
    "skipLibCheck": true,
    "strict": false,
    "module": "esnext",
    "moduleResolution": "node",
    "jsx": "preserve",
    "declaration": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "noEmit": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
